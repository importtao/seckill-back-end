      c.goods_id as goodsId,
      c.model as typeModel,
      g.name as name,
      g.detail as detail,
      g.image as img,
      gi.price as price
    from cart c,goods g,goods_info gi
    where c.user_id = #{userId,jdbcType=VARCHAR}
          and c.goods_id = g.goods_id
          and g.goods_id = gi.goods_id
